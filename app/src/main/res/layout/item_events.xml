<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8dp"
    android:background="@drawable/card_background"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_15dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/ivListEventImage"
            android:layout_width="0dp"
            android:layout_height="@dimen/_130dp"
            android:layout_weight="0.8"
            android:scaleType="fitXY"
            android:src="@drawable/profileplaceholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvListEventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mr. MEZU Lionel"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvListEventTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Young Gurantee"
                    android:textColor="@color/textGrey"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:id="@+id/tvListEventType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8dp"
                    android:text="Type: Event"
                    android:textColor="@color/textGrey"
                    android:textSize="@dimen/_15sp" />

                <RelativeLayout
                    android:id="@+id/registerEventLayout"
                    android:layout_width="@dimen/_120dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:background="@drawable/button_style_green_stroke"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ok_green" />

                        <TextView
                            android:id="@+id/registerTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8dp"
                            android:text="Register"
                            android:textColor="#1ad078"
                            android:textSize="11sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
