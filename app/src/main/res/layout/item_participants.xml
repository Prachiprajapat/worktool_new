<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civParticipant"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginTop="@dimen/_15dp"
            app:civ_border_color="#fff"
            app:civ_border_width="1dp" />
        <TextView
            android:id="@+id/tvParticipantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/civParticipant"
            android:layout_toRightOf="@+id/civParticipant"
            android:ellipsize="end"
            android:layout_alignTop="@id/civParticipant"
            android:maxLines="1"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_5dp"
            android:singleLine="true"
            android:text="participent name"
            android:textColor="#000"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
